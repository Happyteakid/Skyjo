#:kivy 2.3.0
<Root>:
    orientation: "vertical"
    spacing: 8
    padding: 8
    board_grid: board
    stock_btn: sbtn
    discard_btn: dbtn
    pending_btn: pbtn

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Label:
            text: "Skyjo (Kivy)"
            bold: True
        Label:
            text: "Stock: " + str(root.stock_len)
        Label:
            text: "Discard: " + root.discard_top
        Label:
            text: "In Hand: " + root.pending_text

    BoxLayout:
        size_hint_y: None
        height: "48dp"
        spacing: 8
        Button:
            id: sbtn
            text: "Draw from Stock"
            disabled: not root.can_draw
            on_release: root.on_draw()
        Button:
            text: "Take Discard"
            disabled: not root.can_take
            on_release: root.on_take_discard()
        Button:
            text: "Discard & Flip"
            disabled: not root.can_flip
            on_release: root.on_discard_and_flip()
        Button:
            text: "Next Player"
            on_release: root.on_next_player()

    GridLayout:
        id: board
        cols: 4
        rows: 3
        size_hint_y: 1
        spacing: 6
        padding: 6

    Label:
        size_hint_y: None
        height: "32dp"
        text: root.info
